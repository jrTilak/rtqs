{
  "name": "@pocket-iq/server",
  "version": "0.0.1-dev.2",
  "description": "Pocket IQ Server",
  "author": "jrtilak",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:render": "pnpm i --frozen-lockfile && nest build",
    "start": "nest start",
    "start:dev": "rm -f tsconfig.build.tsbuildinfo && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "pnpm run typeorm:prod migration:run && node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm:dev": "NODE_ENV=dev ts-node -P tsconfig.typeorm.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/db/index.ts",
    "typeorm:prod": "NODE_ENV=prod ts-node -P tsconfig.typeorm.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/db/index.ts",
    "lint": "eslint ."
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.971.0",
    "@aws-sdk/s3-request-presigner": "^3.971.0",
    "@better-auth/expo": "^1.4.17",
    "@hedystia/better-auth-typeorm": "^0.4.4",
    "@mikro-orm/core": "^6.6.3",
    "@mikro-orm/entity-generator": "^6.6.3",
    "@mikro-orm/migrations": "^6.6.3",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.6.3",
    "@mikro-orm/reflection": "^6.6.3",
    "@mikro-orm/seeder": "^6.6.3",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.4",
    "@nestjs/typeorm": "^11.0.0",
    "@scalar/nestjs-api-reference": "^1.0.15",
    "@thallesp/nestjs-better-auth": "^2.2.2",
    "better-auth": "^1.4.12",
    "better-auth-mikro-orm": "^0.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "pg": "^8.17.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.28",
    "unique-names-generator": "^4.7.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@mikro-orm/cli": "^6.6.3",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.12",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.39.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.53.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}